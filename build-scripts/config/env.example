# ==================== ACK 配置 ====================
ACK_CLUSTER_ID=c2027cfa259e94c4a9f5846bd0012f089
ACK_REGION=ap-southeast-1
ACK_KUBECONFIG_PATH=~/.kube/config

# ==================== 通用配置 ====================
LOG_LEVEL=info
BUILD_LOG_DIR=./logs
TEMP_DIR=./temp
CLEANUP_AFTER_BUILD=true

# ==================== 通知配置 ====================
# 邮件通知
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=admin@example.com

# 钉钉通知
DINGTALK_WEBHOOK=https://oapi.dingtalk.com/robot/send?access_token=your-token

# 企业微信通知
WECHAT_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-key

# ==================== 构建配置 ====================
# 构建超时时间 (秒)
BUILD_TIMEOUT=1800

# 部署超时时间 (秒)
DEPLOY_TIMEOUT=300

# 并发构建数量
MAX_CONCURRENT_BUILDS=2

# 是否在构建后清理临时文件
CLEANUP_AFTER_BUILD=true

# ==================== 日志配置 ====================
# 日志保留天数
LOG_RETENTION_DAYS=30

# 日志文件大小限制 (MB)
LOG_MAX_SIZE=100

# 是否启用详细日志
VERBOSE_LOGGING=false

# ==================== 安全配置 ====================
# 是否验证镜像签名
VERIFY_IMAGE_SIGNATURE=false

# 是否扫描镜像漏洞
SCAN_IMAGE_VULNERABILITIES=false

# ==================== 监控配置 ====================
# 是否启用健康检查
ENABLE_HEALTH_CHECK=true

# 健康检查超时时间 (秒)
HEALTH_CHECK_TIMEOUT=30

# 是否启用性能监控
ENABLE_PERFORMANCE_MONITORING=false
